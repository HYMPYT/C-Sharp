<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DeliveryService">
    <Style x:Key="baseFont">
        <Setter Property="Control.FontFamily" Value="Consolas"/>
        <Setter Property="Control.FontSize" Value="12"/>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource baseFont}">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Padding" Value="10, 2"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource baseFont}">
        <Setter Property="Width" Value="150"/>
        <Setter Property="Padding" Value="2, 3"/>
        <Setter Property="Margin" Value="0, 10, 3, 5"/>
    </Style>
    <Style TargetType="ListView" BasedOn="{StaticResource baseFont}">
        
    </Style>
</ResourceDictionary>