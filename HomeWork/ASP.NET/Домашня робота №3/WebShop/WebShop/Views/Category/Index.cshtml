@model IEnumerable<DAL.Context.Category>
@{
    ViewBag.Title = "Index";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "categories"
    };
}

<h2 class="text-center">Categories</h2>

@if (ViewBag.PagesCount > 1)
{
    <div class="my-2">
        @for (int i = 0; i < ViewBag.PagesCount; i++)
        {
            @Ajax.ActionLink((i + 1).ToString(), "CategoryTable", "Category", new { id = i + 1 }, options, new { @class = "btn btn-info mx-2" })
        }
        <a href="/Category/AddOrUpdate" class="btn btn-dark mx-2">Add</a>
    </div>
}
else
{
    <div class="my-2">
        <a href="/Category/AddOrUpdate" class="btn btn-dark mx-2">Add</a>
    </div>
}

<div id="categories">
    @Html.Action("CategoryTable")
</div>
