@model IEnumerable<DAL.Context.Manufacturer>
@{
    ViewBag.Title = "Index";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "manufacturers"
    };
}

<h2 class="text-center">Manufacturers</h2>

@if (ViewBag.PagesCount > 1)
{
    <div class="my-2">
        @for (int i = 0; i < ViewBag.PagesCount; i++)
        {
            @Ajax.ActionLink((i + 1).ToString(), "ManufacturerTable", "Manufacturer", new { id = i + 1 }, options, new { @class = "btn btn-info mx-2" })
        }
        <a href="/Manufacturer/AddOrUpdate" class="btn btn-dark mx-2">Add</a>
    </div>
}
else
{
    <div class="my-2">
        <a href="/Manufacturer/AddOrUpdate" class="btn btn-dark mx-2">Add</a>
    </div>
}

<div id="manufacturers">
    @Html.Action("ManufacturerTable")
</div>
