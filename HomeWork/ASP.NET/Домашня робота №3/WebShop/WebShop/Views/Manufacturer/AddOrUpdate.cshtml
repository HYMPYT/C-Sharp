@model DAL.Context.Manufacturer
@{
    ViewBag.Title = "AddOrUpdate";
}

<h2>AddOrUpdate</h2>

@using (Html.BeginForm("AddOrUpdate", "Manufacturer", FormMethod.Post))
{
   
    @Html.HiddenFor(m => m.ManufacturerId)
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.ManufacturerName)
        @Html.TextBoxFor(m => m.ManufacturerName, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />
}