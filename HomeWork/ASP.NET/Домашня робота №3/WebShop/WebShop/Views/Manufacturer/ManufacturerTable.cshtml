<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ManufacturerId</th>
            <th>ManufacturerName</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manufacturer in Model)
        {
            <tr>
                <td>@manufacturer.ManufacturerId</td>
                <td>@manufacturer.ManufacturerName</td>
                <td>
                    <a href="/Manufacturer/Delete/@manufacturer.ManufacturerId" class="btn btn-danger mx-2">Delete</a>
                    <a href="/Manufacturer/AddOrUpdate/@manufacturer.ManufacturerId" class="btn btn-warning mx-2">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
