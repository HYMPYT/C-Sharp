@model IEnumerable<DAL.Context.Good>
@{
    ViewBag.Title = "Index";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "goods"
    };
}

<h2 class="text-center">Index</h2>

@if (ViewBag.PagesCount > 1)
{
    <div class="my-2">
        @for (int i = 0; i < ViewBag.PagesCount; i++)
        {
            @Ajax.ActionLink((i + 1).ToString(), "HomeTable", "Home", new { id = i + 1 }, options, new { @class = "btn btn-info mx-2" })
        }
    </div>
}

<div id="goods">
    @Html.Action("HomeTable")
</div>
