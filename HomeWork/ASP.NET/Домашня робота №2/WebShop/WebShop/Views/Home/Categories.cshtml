@using WebShop.Models
@model List<Category>
@{
    ViewBag.Title = "Categories";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "categories"
    };
}

<h2 class="text-center">Categories</h2>

@if (ViewBag.PagesCount > 1)
{
    <div class="my-2">
        @for (int i = 0; i < ViewBag.PagesCount; i++)
        {
            @Ajax.ActionLink((i + 1).ToString(), "CategoryTable", "Home", new { id = i + 1 }, options, new { @class = "btn btn-info mx-1" })
        }
    </div>
}

<div id="categories">
    @Html.Action("CategoryTable")
</div>
