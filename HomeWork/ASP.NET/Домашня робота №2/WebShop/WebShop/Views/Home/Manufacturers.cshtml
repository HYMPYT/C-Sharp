@using WebShop.Models
@model List<Manufacturer>
@{
    ViewBag.Title = "Manufacturers";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "manufacturer"
    };
}

<h2 class="text-center">Manufacturers</h2>

@if (ViewBag.PagesCount > 1)
{
    <div class="my-2">
        @for (int i = 0; i < ViewBag.PagesCount; i++)
        {
            @Ajax.ActionLink((i + 1).ToString(), "ManufacturerTable", "Home", new { id = i + 1 }, options, new { @class = "btn btn-info mx-1" })
        }
    </div>
}

<div id="manufacturer">
    @Html.Action("ManufacturerTable")
</div>
