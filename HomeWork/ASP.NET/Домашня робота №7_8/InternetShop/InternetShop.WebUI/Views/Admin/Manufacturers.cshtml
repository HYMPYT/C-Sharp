@using InternetShop.BLL.Models.UIModels
@model ManufacturersListVM
@{
    ViewBag.Title = "Manufacturers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Manufacturers</h2>

<div class="my-2">
    @if (Model.PagingInfo.TotalPages > 1)
    {
        for (int i = 0; i < Model.PagingInfo.TotalPages; i++)
        {
            @Ajax.ActionLink((i + 1).ToString(), "ManufacturersSummary", "Admin", new { page = i + 1 }, new AjaxOptions { UpdateTargetId = "manufacturers" }, new { @class = "btn btn-info mx-2" })
        }
    }
    @if (Request.IsAuthenticated && User.IsInRole("AppManager"))
    {
        @Ajax.ActionLink("Create New", "CreateManufacturer", null, new AjaxOptions { UpdateTargetId = "manufacturerModalDialog" }, new { @class = "btn btn-dark mx-2", data_toggle = "modal", data_target = "#manufacturerModal" })
    }
</div>

<div class="modal fade" id="manufacturerModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div id="manufacturerModalDialog" class="modal-dialog" role="document">
    </div>
</div>

<div id="manufacturers" class="mx-auto">
    @{Html.RenderPartial("ManufacturersSummary", Model.Manufacturers);}
</div>
